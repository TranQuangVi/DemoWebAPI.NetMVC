@model IEnumerable<WebApplication1.Models.Book>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.TitlePageName</h2>
<form action="#" method="post">
    <input type="text" name="id" id="search" value="" />
    <button type="submit">
        Search
    </button>
</form>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="panel panel-default">
                <div class="panel panel-heading">
                    @item.Title
                    @Html.ActionLink("Detail", "Detail", new { id = item.Id }, new { @class = "pull-right" })
                </div>
                <div class="panel-body">
                    <p>
                        <strong>Author: </strong>@item.Author
                    </p>
                    <p>
                        <strong>Year: </strong>@item.Year
                    </p>
                    <p>
                        <strong>Price: </strong>@item.Price VND
                    </p>
                    <p> <img src="/@item.Cover" alt="hinh thumnail" width="185px" height="275px"</p>
                </div>
                <div class="panel-footer clearfix">
                    <div class="pull-right">
                        <a href="#" class="btn btn-primary">Order</a>
                        @Html.ActionLink("read more...", "Detail", new { id = item.Id }, new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>

        </div>
    }
</div>